<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBack"
    android:orientation="vertical"
    tools:context=".onboardingFragments.OnBoardingFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:id="@+id/animation_view"
        android:layout_weight="1"
        app:lottie_autoPlay="true"
        app:lottie_fileName="boarding1.json"
        app:lottie_loop="true"/>



    <LinearLayout
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginVertical="@dimen/_12sdp"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Features" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:textColor="@color/halfWhite"
            android:layout_marginVertical="@dimen/_12sdp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="@dimen/_12ssp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:text="Sets the current progress to the specified value, optionally animating the visual position between the current and target values"
            android:layout_height="wrap_content"/>



    </LinearLayout>


</LinearLayout>